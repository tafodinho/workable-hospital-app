<%= form_with(model: patient, class: "p-4 md:p-5") do |form| %>
	<% if patient.errors.any? %>
		<div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
			<h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>
			<ul>
				<% patient.errors.each do |error| %>
					<li><%= error.full_message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="grid gap-4 mb-4 grid-cols-2">
	</div>
	<div class="col-span-2 mb-2">
		<%= form.label :name, class: "block mb-1 text-sm font-medium text-gray-900 dark:text-white" %>
		<%= form.text_field :name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "Enter Patient Name" %>
	</div>
	<div class="col-span-2 mb-2">
		<%= form.label :dob, class: "block mb-1 text-sm font-medium text-gray-900 dark:text-white" %>
		<%= form.date_field :dob, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "Enter Patient Name"  %>
	</div>
	<div class="col-span-2 mb-2">
		<%= form.label :phone_number, class: "block mb-1 text-sm font-medium text-gray-900 dark:text-white" %>
		<%= form.text_field :phone_number, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "Enter Patient Name"  %>
	</div>
	<div class="col-span-2 mb-2">
		<%= form.label :email, class: "block mb-1 text-sm font-medium text-gray-900 dark:text-white" %>
		<%= form.text_field :email, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "Enter Patient Name"  %>
	</div>
	<div class="col-span-2 mb-2">
		<%= form.label :address, class: "block mb-1 text-sm font-medium text-gray-900 dark:text-white" %>
		<%= form.text_field :address, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "Enter Patient Name"  %>
	</div>
	<div class="inline mt-4">
		<%= form.submit class: "text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
	</div>
<% end %>
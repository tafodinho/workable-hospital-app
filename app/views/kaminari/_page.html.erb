<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<li>
	<span class="page <%= ' text-blue-600 border border-blue-300 bg-blue-50 hover:bg-blue-100 hover:text-blue-700' if page.current? %> <%= ' rounded-s-lg' if page.current? && page.first? %> <%= ' rounded-e-lg' if page.current? && page.last? %> flex items-center justify-center px-3 h-8 leading-tight text-gray-500  border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white <%= ' text-blue-600 border border-blue-300 bg-blue-50 hover:bg-blue-100 hover:text-blue-700' if page.current? %>">
		<%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel} %>
	</span>
</li>
